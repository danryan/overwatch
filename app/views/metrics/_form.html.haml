= simple_form_for(resource, :url => resource.new_record? ? collection_url : resource_url(resource), :html => { :method => (resource.new_record? ? "post" : "put") }) do |f|
  - if resource.errors.any?
    %p
      = pluralize(resource.errors.count, "error")
      prohibited this from being saved:
      %ul
        - resource.errors.full_messages.each do |msg|
          %li= msg
  = f.input :name
  = f.button :submit
